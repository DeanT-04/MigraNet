# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Configuration files
[*.{ini,cfg,toml}]
indent_size = 4

# CSV files
[*.csv]
insert_final_newline = false
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_size = 2

# Windows batch files
[*.{bat,cmd}]
end_of_line = crlf

# Makefiles
[Makefile]
indent_style = tab
